<h1>Listing notes</h1>

<%= form_tag(search_notes_path(), :method => :get) do %><br>
<%= label_tag(:keyword, "Mot clÃ© :") %>
<%= text_field_tag("keyword", @keyword) %>
<%= submit_tag("Search") %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @notes.present? %>
      <% @notes.each do |note| %>
        <tr>
          <td><%= note.title %></td>
          <td><%= note.content %></td>
          <td><%= link_to 'Show', note %></td>
          <td><%= link_to 'Edit', edit_note_path(note) %></td>
          <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="4">Aucune note</td>
      </tr>
    <% end %>
</tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
